{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm ci --force && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci --force",
  "devCommand": "npm run dev",
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}