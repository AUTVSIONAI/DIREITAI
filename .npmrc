# NPM configuration for cross-platform compatibility
# Ensures packages work on both Windows (development) and Linux (Vercel deployment)

# Force npm to rebuild native modules for the current platform
rebuild-bundle=true

# Use exact versions to avoid platform-specific issues
save-exact=true

# Increase timeout for slower networks
timeout=300000

# Registry configuration
registry=https://registry.npmjs.org/

# Cache configuration
cache-min=86400

# Force platform-specific rebuilds
force=true